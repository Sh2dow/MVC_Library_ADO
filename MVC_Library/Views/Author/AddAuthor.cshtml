@model MVC_Library.Models.AuthorModels

@{
    ViewBag.Title = "Add Author";
}

<h3 id="addAuthor">New Author</h3>

<form id="authorForm" role="form" action="AddAuthor.cshtml" method="post">
    <div class="form-group">
        <label for="firstname">Firstname:</label>
        @Html.TextBoxFor(a => a.FirstName, new {@class = "form-control"})
        @Html.ValidationMessageFor(author => author.FirstName)
    </div>
    <div class="form-group">
        <label for="lastname">Lastname:</label>
        @Html.TextBoxFor(a => a.LastName, new {@class = "form-control"})
        @Html.ValidationMessageFor(author => author.LastName)
    </div>
    <div class="form-group">
        <label for="country">Country:</label>
        @Html.TextBoxFor(a => a.Country, new {@class = "form-control"})
        @Html.ValidationMessageFor(author => author.Country)
    </div>
    <div class="form-group">
        <label for="bookcount">Age:</label>
        @Html.TextBoxFor(a => a.Age, new {@class = "form-control", type = "number", @Value = ""})
        @Html.ValidationMessageFor(author => author.Age)
    </div>
    <div class="IsAlive">
        @Html.LabelFor(author => author.IsAlive)
        @Html.CheckBoxFor(author => author.IsAlive)
    </div>
    <button type="submit" class="btn btn-default submit">Submit</button>
    <input type="hidden" value="@Model.AuthorId" name="AuthorId"/>
</form>


